@model SimpleAuth.ViewModels.MovieShow.MovieShowVm
<div class="movie-show-wrapper">
    <div class="movie-section">
        @{
            var Movie = Model.Movie;
        }
        <div class="movie-image">
            <img src="/Uploads/Poster/@Movie.Poster" alt="">
        </div>
        <div class="status">
            <h3>(@Movie.MovieStatus)</h3>
        </div>
        <div class="title">
            <h1 style="font-family: Times New Roman, Times, serif; text-transform: uppercase;">@Movie.Title</h1>
            <p>[@Movie.ReleasedDate.ToString("yyyy")]</p>
        </div>
        <div class="details">
            <p style="text-indent: 50px;
  text-align: justify;
  letter-spacing: 3px; margin: 1rem;">
                @Movie.Description
            </p>
            <p>
                <span style="text-align: center;
  text-transform: uppercase;
  color: #4CAF50; margin: 0.5rem">Genre: </span>@Movie.Genres.Name
            </p>
            <p>
                <span style="text-align: center;
  text-transform: uppercase;
  color: #4CAF50; margin: 0.5rem">Cast: </span>@Movie.Cast
            </p>
            <p>
                <span style="text-align: center;
  text-transform: uppercase;
  color: #4CAF50; margin: 0.5rem">Director: </span>@Movie.Director
            </p>

        </div>
    </div>
    <div class="shows-section">
        <div class="shows-container">
            <h1 style=" font-family: Times New Roman, Times, serif; text-align: center; text-transform: uppercase;
  color: #2ed333;">Shows</h1>
            <table id="attractiveTable">
                <tr>
                    <th>Room Name</th>
                    <th>Show Date & Time</th>
                    <th>Cost</th>
                    <th>Action</th>

                </tr>
                @{
                    foreach (var show in Model.Shows)
                    {
                        <tr>
                            <td>@show.Rooms.Name</td>
                            <td>@show.ShowTime</td>
                            <td>RS.@show.Cost</td>
                            <td><a asp-action="MovieShowSeats" asp-route-MovieId="@Movie.Id" asp-route-ShowId="@show.Id"><i
                                        class="bi bi-pencil-square"></i>
                                    View Seats
                                </a></td>
                        </tr>
                    }
                }

                @* <tr>
                <td>Row 2, Cell 1</td>
                <td>Row 2, Cell 2</td>
                <td>Row 2, Cell 3</td>
                <td>View Seats</td>
                </tr>
                <tr>
                <td>Row 2, Cell 1</td>
                <td>Row 2, Cell 2</td>
                <td>Row 2, Cell 3</td>
                <td>View Seats</td>


                </tr>
                <tr>
                <td>Row 2, Cell 1</td>
                <td>Row 2, Cell 2</td>
                <td>Row 2, Cell 3</td>
                <td>View Seats</td>

                </tr>
                <!-- Add more rows as needed --> *@
            </table>
        </div>



    </div>
</div>